                                    <td>{{sum @index 1}}</td>
                                    <td>{{convertDateTimeVersion2 this.date_created}}</td>
                                    <td>{{this.customer_db.customer_first_name}} {{this.customer_db.customer_last_name}}
                                    </td>
                                    <td>{{this.user_db.user_first_name}} {{this.user_db.user_last_name}}</td>
