                                                    data-customer_name="{{this.customer_first_name}} {{this.customer_last_name}}"
                                                    data-customer_email="{{this.customer_email}}"
                                                    data-customer_phone_number="{{this.customer_phone_number}}"
                                                    data-customer_point="{{this.customer_point}}"
                                                    data-customer_address="{{this.customer_address}}" --}}
                                                    class="dropdown-item btn-show-details"><i
                                                        class="bx bx-edit-alt me-1"></i> Download</button>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>

                <nav aria-label="Page navigation" style="margin-right: 23px">
                    <ul class="pagination justify-content-end">
                        <li class="page-item prev">
                            <a class="page-link"
                                href="/report/{{#if (equal (minus currentPage 1) 0)}}1{{else}}{{minus currentPage 1}}{{/if}}"><i
                                    class="tf-icon bx bx-chevrons-left"></i></a>
                        </li>
                        {{#each totalPages}} {{!-- get parent scope because we are in the loop --}}
                        <li class="page-item {{#if (equal ../currentPage this) }}active{{/if}}">
                            <a class="page-link" href="/report/{{this}}">{{this}}</a>
                        </li>
                        {{/each}}
                        <li class="page-item next">
                            <a class="page-link"
                                href="/report/{{#if (moreOrEqualThan (sum currentPage 1) (getArrayLength totalPages) ) }}{{getArrayLength totalPages}}{{else}}{{sum currentPage 1}}{{/if}}"><i
                                    class="tf-icon bx bx-chevrons-right"></i></a>
                        </li>
                    </ul>
                </nav>

            </div>

        </div>
    </div>
</div>

